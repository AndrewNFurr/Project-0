<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>New_Offer_to_Trade</fullName>
        <description>New Offer to Trade</description>
        <protected>false</protected>
        <recipients>
            <type>owner</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/Email_re_New_Offer</template>
    </alerts>
    <rules>
        <fullName>Notify Owner of Trade</fullName>
        <actions>
            <name>New_Offer_to_Trade</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <formula>AND(ISPICKVAL( Accepted__c , &quot;Pending&quot;), OR(ISPICKVAL(Trade__r.Status__c,&quot;New&quot;),
ISPICKVAL(Trade__r.Status__c, &quot;Open&quot;)))</formula>
        <triggerType>onCreateOnly</triggerType>
    </rules>
</Workflow>
